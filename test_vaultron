#!/bin/sh

export CONSUL_HTTP_ADDR="localhost:8500"
export VAULT_ADDR="http://localhost:8200"

./unform
if [ 0 -ne $? ]; then
    echo "ðŸš«  Error unforming any previous Vaultron."
    exit 1
fi

./form
if [ 0 -ne $? ]; then
    echo "ðŸš«  Error forming Vaultron!"
    exit 1
fi

if [ ! -f "tfstate/terraform.tfstate" ]; then
    echo "ðŸš«  No Terraform state generated after forming:"
    echo "tfstate/terraform.tfstate"
    exit 1
fi

for i in 1 2 3; do
    if [ ! -d "consul/consul_oss_server_$i" ]; then
        echo "ðŸš«  Missing directory after forming:"
        echo " $d"
        exit 1
    fi
    if [ ! -d "consul/consul_oss_client_$i" ]; then
        echo "ðŸš«  Missing directory after forming:"
        echo " $d"
        exit 1
    fi
    if [ ! -d "vault/vault_oss_server_$i" ]; then
        echo "ðŸš«  Missing directory after forming:"
        echo " $d"
        exit 1
    fi
done

if [ ! -d ".terraform" ]; then
    echo "ðŸš«  No Terraform configuration directory after forming:"
    echo ".terraform"
    exit 1
fi

for l in init plan apply; do
    if [ -z "$(find log -type f -name "tf-*-$l.log")" ]; then
        echo "ðŸš«  Should be at least one log file of the form:"
        echo "log/tf-*-$l.log"
        exit 1
    fi
done

./blazing_sword
if [ 0 -ne $? ]; then
    echo "ðŸš«  Error forming Blazing Sword!"
    exit 1
fi

./unform
if [ 0 -ne $? ]; then
    echo "ðŸš«  Error unforming Vaultron."
    exit 1
fi

if [ -f "tfstate/terraform.tfstate" ]; then
    echo "ðŸš«  Terraform state file still present after unforming."
    exit 1
fi

for i in 1 2 3; do
    if [ -d "consul/consul_oss_server_$i" ]; then
        echo "ðŸš«  Directory still present after forming:"
        echo " $d"
        exit 1
    fi
    if [ -d "consul/consul_oss_client_$i" ]; then
        echo "ðŸš«  Directory still present after forming:"
        echo " $d"
        exit 1
    fi
    if [ -d "vault/vault_oss_server_$i" ]; then
        echo "ðŸš«  Directory still present after forming:"
        echo " $d"
        exit 1
    fi
done

if [ -d ".terraform" ]; then
    echo "ðŸš«  Terraform configuration directory still present after unforming:"
    echo ".terraform"
    exit 1
fi

if [ -z "$(find log -type f -name "tf-*-destroy.log")" ]; then
    echo "ðŸš«  Should be at least one log file after destroy of the form:"
    echo "log/tf-*-destroy.log"
    exit 1
fi

